{
  "name": "vscode-typmark",
  "displayName": "TypMark",
  "description": "TypMark language support for VS Code",
  "version": "0.2.0",
  "publisher": "miko-misa",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:typmark",
    "onCommand:typmark.showPreview",
    "onCommand:typmark.showCliVersion"
  ],
  "contributes": {
    "languages": [
      {
        "id": "typmark",
        "aliases": [
          "TypMark",
          "typmark"
        ],
        "extensions": [
          ".tmd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "typmark",
        "scopeName": "source.typmark",
        "path": "./syntaxes/typmark.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "TypMark",
      "properties": {
        "typmark.cliPath": {
          "type": "string",
          "default": "",
          "description": "Path to typmark-cli. Leave empty to use the managed binary."
        },
        "typmark.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Download and update typmark-cli automatically."
        },
        "typmark.checkExtensionUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Check GitHub Releases for newer VSIX versions and notify."
        },
        "typmark.previewTheme": {
          "type": "string",
          "default": "auto",
          "enum": [
            "auto",
            "light",
            "dark"
          ],
          "description": "Preview theme for TypMark rendering."
        }
      }
    },
    "commands": [
      {
        "command": "typmark.showPreview",
        "title": "TypMark: Show Preview"
      },
      {
        "command": "typmark.selectPreviewTheme",
        "title": "TypMark: Select Preview Theme"
      },
      {
        "command": "typmark.showCliVersion",
        "title": "TypMark: Show CLI Version"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "typmark.showPreview",
          "when": "resourceLangId == typmark",
          "group": "navigation",
          "icon": "$(open-preview)"
        },
        {
          "command": "typmark.selectPreviewTheme",
          "when": "resourceLangId == typmark",
          "group": "navigation@1",
          "icon": "$(paintcan)"
        }
      ],
      "commandPalette": [
        {
          "command": "typmark.selectPreviewTheme"
        },
        {
          "command": "typmark.showCliVersion"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.11.0",
    "@vscode/vsce": "^2.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/miko-misa/vscode-typmark.git"
  }
}
