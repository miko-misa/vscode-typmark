{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "TypMark",
  "scopeName": "source.typmark",
  "patterns": [
    {
      "name": "markup.heading.typmark",
      "match": "^(#{1,6})\\s+.+$"
    },
    {
      "name": "markup.quote.typmark",
      "match": "^>\\s+.+$"
    },
    {
      "name": "markup.list.typmark",
      "match": "^(\\s*)([-*+]\\s+|\\d+\\.\\s+).+$"
    },
    {
      "name": "markup.raw.block.typmark",
      "begin": "^```+.*$",
      "end": "^```+$"
    },
    {
      "name": "markup.math.block.typmark",
      "begin": "^\\$\\$",
      "end": "^\\$\\$"
    },
    {
      "name": "markup.box.typmark",
      "begin": "^:::\\s+.*$",
      "end": "^:::$"
    },
    {
      "name": "markup.attribute.typmark",
      "match": "\\{#.*?\\}"
    },
    {
      "name": "markup.reference.typmark",
      "match": "@[A-Za-z0-9_-]+(\\[[^\\]]+\\])?"
    },
    {
      "name": "markup.raw.inline.typmark",
      "match": "`[^`]+`"
    },
    {
      "name": "markup.math.inline.typmark",
      "match": "\\$[^$]+\\$"
    }
  ]
}
